<.form :let={f} for={@changeset} action={@action}>
  <.input field={f[:name]} type="text" label="Name" />
  <.input field={f[:description]} type="textarea" label="Description" />
  <.input field={f[:price]} type="number" label="Price" step="any" />
  <.input field={f[:quantity]} type="number" label="Quantity" />
  <.input field={f[:category]} type="text" label="Category" />
  <.input field={f[:in_stock]} type="checkbox" label="In Stock" />
  <footer>
    <.button variant="primary">Save Product</.button>
    <.button :if={@return_to} href={@return_to}>Cancel</.button>
  </footer>
</.form>
